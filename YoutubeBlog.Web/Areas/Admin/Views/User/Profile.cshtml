@model UserProfileDto

<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Profilim</span>
    </h4>

    <div class="row">
        <div class="col-md-12">

            <div class="card mb-4">
                <h5 class="card-header">Profile Bilgierim</h5>
                <!-- Account -->
                <form id="formAccountSettings" asp-area="Admin" asp-controller="User" asp-action="Profile" method="post" enctype="multipart/form-data">
                    <div class="card-body">

                        <div class="d-flex align-items-start align-items-sm-center gap-4">
                            <img src="~/images/@Model.Image.FileName" alt="user-avatar" class="d-block rounded" height="100" width="100" id="uploadedAvatar">
                            <div class="button-wrapper">
                                <label for="upload" class="btn btn-primary me-2 mb-4" tabindex="0">
                                    <span class="d-none d-sm-block">Upload new photo</span>
                                    <i class="bx bx-upload d-block d-sm-none"></i>
                                    <input type="file" asp-for="Photo" id="upload" class="account-file-input" hidden="" accept="image/png, image/jpeg">
                                    
                                    <span asp-validation-for="Photo" class="text-danger"></span>
                                </label>


                            </div>
                        </div>
                    </div>
                    <hr class="my-0">
                    <div class="card-body">

                        <div asp-validation-summary="All" class="text-danger">
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label asp-for="FirstName" class="form-label">İsim</label>
                                <input asp-for="FirstName" class="form-control" type="text" autofocus="">
                                <span asp-validation-for="FirstName"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="LastName" class="form-label">Soyisim</label>
                                <input asp-for="LastName" class="form-control" type="text" autofocus="">
                                <span asp-validation-for="LastName"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="Email" class="form-label">Mail Adresi</label>
                                <input asp-for="Email" class="form-control" type="email" autofocus="" disabled="disabled">
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                                <input asp-for="PhoneNumber" class="form-control" type="tel" autofocus="">
                                <span asp-validation-for="PhoneNumber"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="CurentPassword" class="form-label">Mevcut Şifreniz</label>
                                <input asp-for="CurentPassword" class="form-control" type="password" autofocus="">
                                <span asp-validation-for="CurentPassword"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="NewPassword" class="form-label">Yeni Şifreniz(Opsiyonel)</label>
                                <input asp-for="NewPassword" class="form-control" type="password" autofocus="">
                                <span asp-validation-for="NewPassword"></span>
                            </div>

                        </div>
                        <div class="mt-2">
                            <button type="submit" class="btn btn-primary me-2">Güncelle</button>
                        </div>

                    </div>
                </form>
                <!-- /Account -->
            </div>

        </div>
    </div>


</div>
